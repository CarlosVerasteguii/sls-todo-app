# =============================================================================
# SLS To-Do App - Environment Variables
# =============================================================================
# Copy this file to .env.local and configure your real values
# =============================================================================

# =============================================================================
# NEXT.JS CONFIGURATION
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these values from your Supabase project > Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Direct PostgreSQL connection configuration (optional, for scripts)
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# =============================================================================
# N8N CONFIGURATION
# =============================================================================
# URL of your n8n instance
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/task-created
N8N_API_KEY=your-n8n-api-key-here

# =============================================================================
# WHATSAPP BUSINESS API CONFIGURATION
# =============================================================================
# Configuration for WhatsApp Business API (managed by n8n)
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-access-token

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Secret for Supabase (automatically configured)
# JWT_EXPIRY=3600

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test database for E2E tests
TEST_SUPABASE_URL=https://your-test-project.supabase.co
TEST_SUPABASE_ANON_KEY=your-test-anon-key-here
TEST_SUPABASE_SERVICE_ROLE_KEY=your-test-service-role-key-here

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Enable development tools
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_LOGGING=true

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Sentry for error monitoring (optional)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable specific features
NEXT_PUBLIC_ENABLE_WHATSAPP_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_AI_ENHANCEMENT=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=false

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================
# Cache and performance configuration
NEXT_PUBLIC_CACHE_TTL=300
NEXT_PUBLIC_MAX_RETRIES=3

# =============================================================================
# IMPORTANT NOTES:
# =============================================================================
# 1. NEVER commit .env.local to the repository
# 2. Keep service keys secure
# 3. Use different Supabase projects for development and production
# 4. Configure RLS on all Supabase tables
# 5. Verify that n8n only has access to necessary webhooks
# =============================================================================
